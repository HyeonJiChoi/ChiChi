<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InspectorTestProblemPicture">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:text="Hello"
        android:id="@+id/inspectorTestProblemTextSpeak"
        android:textSize="50dp"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:background="@drawable/othershadow"/>
    <View
        android:id="@+id/test_speak_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/inspectorTestProblemTextSpeak"
        android:layout_marginTop="60dp"
        android:background="@drawable/gradient" />
    <ImageButton
        android:id="@+id/inspectorTestProblemTextSpeakButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/speak_button"
        android:layout_below="@+id/inspectorTestProblemTextSpeak"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/inspectorTestProblemTextSpeakText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="답변을 원하시면 버튼을 눌러주세요"
        android:textSize="20dp"
        android:layout_marginTop="4dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/inspectorTestProblemTextSpeakButton"
        />

</RelativeLayout>