<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/extra"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/othershadow"/>
    <org.dementia.chichi.DrawCDTCanvas
        android:id="@+id/InspectorTestProblemCDTCanvas"
        android:layout_marginTop="10dp"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/othershadow"/>
    <ImageButton
        android:id="@+id/InspectorTestProblemCDTButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/extra"
        android:layout_alignBottom="@+id/extra"
        android:background="@drawable/drawpencilpicture2"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"/>
    <Button
        android:text="Complete"
        android:id="@+id/InspectorTestProblemCDTCompleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/extra"
        android:layout_alignBottom="@+id/extra"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/extra"
        android:layout_marginTop="60dp"
        android:background="@drawable/gradient" />

</RelativeLayout>