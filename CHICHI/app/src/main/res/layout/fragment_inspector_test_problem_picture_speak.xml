<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InspectorTestProblemPicture">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/inspectorTestProblemPictureSpeak"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <View
        android:id="@+id/test_picture_speak_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/inspectorTestProblemPictureSpeak"
        android:layout_marginTop="60dp"
        android:background="@drawable/gradient" />
    <ImageButton
        android:id="@+id/inspectorTestProblemPictureSpeakButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/speak_button"
        android:layout_below="@+id/inspectorTestProblemPictureSpeak"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/inspectorTestProblemPictureSpeakText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="소리와 함께 답을 말해주세요"
        android:textSize="20dp"
        android:layout_marginTop="4dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/inspectorTestProblemPictureSpeakButton"
        />

</RelativeLayout>