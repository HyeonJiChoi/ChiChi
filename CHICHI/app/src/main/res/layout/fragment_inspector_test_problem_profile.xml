<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:id="@+id/TestProblemListProfile1"
        android:background="@drawable/select_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:stateListAnimator="@null"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/TestProblemProfile1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/initprofile"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/smallquiz1" />
    <Button
        android:layout_below="@+id/TestProblemListProfile1"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:id="@+id/TestProblemListProfile2"
        android:background="@drawable/select_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:stateListAnimator="@null"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_below="@+id/TestProblemListProfile1"
        android:id="@+id/TestProblemProfile2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/initprofile"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:layout_below="@+id/TestProblemListProfile1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/smallquiz2" />
    <View
        android:id="@+id/test_backgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/TestProblemListProfile2"
        android:layout_marginTop="100dp"
        android:background="@drawable/gradient" />
</RelativeLayout>